<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/addcase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:text="@string/buttonAdd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/deadline"
        android:layout_width="116dp"
        android:layout_height="42dp"
        android:layout_marginBottom="140dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/deadline"
        app:layout_constraintBottom_toTopOf="@+id/addcase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_text"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:hint="@string/tasktext"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/priority_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <Spinner
        android:id="@+id/priority_spinner"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:layout_marginBottom="48dp"
        android:prompt="@string/importance"

        app:layout_constraintBottom_toTopOf="@+id/deadline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>